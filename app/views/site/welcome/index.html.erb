<% @questions.each do |question| %>
  <div class="card mb-4">
    <div class="card-header">
      <h3 class="card-title"><%= question.description %></h3>
    </div>
    <div class="card-body">
      <ul>
        <% question.answers.each do |answer| %>
          <li><%= answer.description %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
