<div class="row">
  <div class="col-lg-12 px-4 pt-4">
    <h1 class="page-header">Listando Assuntos/Áreas</h1>
    <hr/>
  </div>
</div>
<div class="container-fluid">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>
          <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success rounded-4" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.id %></td>
          <td><%= subject.description %></td>
          <td style="width: 105px">
            <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary rounded-4" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_subject_path(subject), class:"btn btn-danger rounded-4", data: { "turbo-method": :delete, turbo_confirm: "Deseja realmente excluir esse assunto/área?" } do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @subjects %>
  </div>