<div class="row">
  <div class="col-lg-12 px-4 pt-4">
    <h1 class="page-header"><%= action_message %></h1>
    <hr/>
  </div>
</div>
<% if @admin.errors.any? %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <% @admin.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<%= form_with(model: [ :admins_backoffice, @admin ], local: true, turbo: false) do |form| %>
  <div class="p-3">
    <div class="mb-3">
      <%= form.label :email, class:"form-label"  %>
      <%= form.text_field :email, class:"form-control", placeholder: t('placeholder.admin_email')  %>
    </div>
    <div class="mb-3">
      <%= form.label :password, class:"form-label"  %>
      <%= form.password_field :password, class:"form-control", placeholder:t('placeholder.admin_password')  %>
    </div>
    <div class="mb-3">
      <%= form.label :password_confirmation, class:"form-label"  %>
      <%= form.password_field :password_confirmation, class:"form-control", placeholder:t('placeholder.admin_password_confirmation')  %>
    </div>
    <button type="submit" class="btn btn-primary" data-turbo="false"><%= t('buttons.save') %></button>
  </div>
<% end %>
