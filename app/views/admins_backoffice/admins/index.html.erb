<h1>Listando Administradores</h1>
<div class="container-fluid">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>
          <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success rounded-4" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td style="width: 105px">
            <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary rounded-4" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_admin_path(admin), class:"btn btn-danger rounded-4", data: { "turbo-method": :delete, turbo_confirm: "Deseja realmente excluir esse administrador?" } do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
