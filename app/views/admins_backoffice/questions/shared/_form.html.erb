<div class="row">
  <div class="col-lg-12 px-4 pt-4">
    <h1 class="page-header"><%= action_message %></h1>
    <hr/>
  </div>
</div>
<% if @subject.errors.any? %>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <% @subject.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<%= form_with(model: [ :admins_backoffice, @subject ], local: true, turbo: false) do |form| %>
  <div class="p-3">
    <div class="mb-3">
      <%= form.label :description, class:"form-label"  %>
      <%= form.text_field :description, class:"form-control", placeholder:"Descrição do assunto/área"  %>
    </div>
    <button type="submit" class="btn btn-primary" data-turbo="false">Submit</button>
  </div>
<% end %>
