<div class="row">
  <div class="col-lg-12 px-4 pt-4">
    <h1 class="page-header"><%= t('messages.listing', model: @questions.model_name.human(count: 2)) %></h1>
    <hr/>
  </div>
</div>
<div class="container-fluid">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th><%= translate_attribute(@questions, :description) %></th>
        <th><%= translate_attribute(@questions, :subject) %></th>
        <th>
          <%= link_to new_admins_backoffice_question_path, class:"btn btn-success rounded-4" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
          <td><%= question.id %></td>
          <td><%= question.description.truncate(50) %></td>
          <td><%= question.subject.description.truncate(30) %></td>
          <td style="width: 105px">
            <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary rounded-4" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_question_path(question), class:"btn btn-danger rounded-4", data: { "turbo-method": :delete, turbo_confirm: t('messages.confirm_with', item: question.description.truncate(15) ) } do %>
              <i class="fa fa-minus"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @questions %>
  </div>